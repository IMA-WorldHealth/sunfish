!doctype html
html
head
  title report.title
  meta(charset="utf8")

  style.
    .container {
      width: 100%
      max-width: 1600px;
    }

body
  <header class="container">
    <div class="row" style="position: relative">
      <div class="one-half column">
        <img src="{{context.path}}/images/logo.jpg" alt="IMA World Health Logo" />
      </div>

      <div class="one-half column cx-annotation" style="position: absolute; bottom:0; right: 0;">
        <strong>{{ locals.app }}</strong> | {{ report.date}}
      </div>
    </div>

    <hr class="cx-hr" />
  </header>

  <section class="container">
    <h5 class="cx-title">{{ report.title }}</h5>
  </section>

  <main class="container">
    {{#each report.tables as |table|}}
      <div class="row">
        <label style="font-size: 1.25em;">{{table.label}}</label>
        <img src="{{table.uri}}" />
      </div>
    {{else}}
      <p style="text-align:center">No tables found to render.</p>
    {{/each}}

    {{#each report.graphs as |pair|}}
      <div class="row">
        {{#each pair as |img|}}
          {{#if img}}
            <div class="one-half column">
              <img src="{{img}}" />
            </div>
          {{/if}}
        {{/each}}
      </div>
    {{/each}}
  </main>
</body>
</html>
